#!/usr/bin/env bash
# Permanently redirecting requests to another page

# Install nginx
sudo apt update
sudo apt install -y nginx

# Add a redirect command to nginx to config on line 53
sudo sed -i "53s/.*/location \/redirect_me {\n\treturn 301 http:\/\/github.com\/\;\n}/" /etc/nginx/sites-available/default

# Start nginx server
sudo service nginx restart
